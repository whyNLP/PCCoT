export HF_ENDPOINT=https://hf-mirror.com
export WANDB_PROJECT=coconut

accelerate launch run_cot.py \
    --model_name_or_path gpt2 \
    --dataset_name whynlp/gsm8k-aug \
    --label_names labels \
    --lora_target_modules c_attn-c_fc-c_proj \
